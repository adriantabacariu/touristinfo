<h3 class="place-name"><%= name %></h3>
<h4>Description</h4>
<% if (locals.description) { %>
  <p><%= description %></p>
<% } else { %>
  <p class="text-muted">No description available.</p>
<% } %>
<h4>Weather</h4>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Day</th>
      <th>Night</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for (var i = forecast.length - 1; i >= 0; i--) { %>
      <tr>
        <td><%= forecast[i].temp.day %>&#8451;</td>
        <td class="text-muted"><%= forecast[i].temp.night %>&#8451;</td>
        <td>
          <%= forecast[i].weather[0].main %>
          <br>
          (<%= forecast[i].weather[0].description %>)
        </td>
        <td><img src="<%= forecast[i].weather[0].iconUrl %>"></td>
      </tr>
    <% } %>
  </tbody>
</table>
<div id="forecast"></div>
<h4>Reviews</h4>
